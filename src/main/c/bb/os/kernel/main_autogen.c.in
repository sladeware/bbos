#define BBOS_KERNEL_ID {{ core.id }}

#include "bb/os.h"
#include BBOS_PROCESSOR_FILE(init.h)

static void
loop()
{
  while (1) {
  {% for thread in threads %}
    bbos_set_running_thread({{ thread.get_name }});
    {{ thread.get_runner }}();
  }
  {% endfor %}
}

static void
init()
{
  //bbos_kernel_init();
}

static void
start()
{
  loop();
}

void
main{{ core.id }}(void* arg)
{
  init();
  start();
}
